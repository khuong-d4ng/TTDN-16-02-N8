<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_don_hang_tree" model="ir.ui.view">
        <field name="name">Đơn hàng - Danh sách</field>
        <field name="model">quan_ly_khach_hang.don_hang</field>
        <field name="arch" type="xml">
            <tree string="Đơn hàng">
                <field name="ten_don_hang"/>
                <field name="ten_khach_hang"/>
                <field name="ma_khach_hang"/>
                <field name="ten_doanh_nghiep"/>
                <field name="email"/>
                <field name="don_gia"/>
                <field name="trang_thai"/>
                <field name="ngay_tao_don"/>
                <field name="han_ban_giao"/>
            </tree>
        </field>
    </record>

    <record id="view_don_hang_form" model="ir.ui.view">
        <field name="name">Đơn hàng - Form</field>
        <field name="model">quan_ly_khach_hang.don_hang</field>
        <field name="arch" type="xml">
            <form string="Đơn hàng">
                <sheet>
                    <group>
                        <group>
                            <field name="ten_don_hang"/>
                            <field name="khach_hang_id"/>
                        </group>
                        <group string="Thông tin khách hàng">
                            <field name="ma_khach_hang" readonly="1"/>
                            <field name="ten_khach_hang" readonly="1"/>
                            <field name="ten_doanh_nghiep" readonly="1"/>
                            <field name="email" readonly="1"/>
                        </group>
                    </group>

                    <group>
                        <group>
                            <field name="don_gia"/>
                            <field name="trang_thai"/>
                        </group>
                        <group>
                            <field name="ngay_tao_don"/>
                            <field name="han_ban_giao"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View for Dashboard -->
    <record id="view_don_hang_kanban" model="ir.ui.view">
        <field name="name">Đơn hàng - Kanban</field>
        <field name="model">quan_ly_khach_hang.don_hang</field>
        <field name="arch" type="xml">
            <kanban default_group_by="trang_thai" class="o_kanban_small_column">
                <field name="ten_don_hang"/>
                <field name="ten_khach_hang"/>
                <field name="don_gia"/>
                <field name="trang_thai"/>
                <field name="ngay_tao_don"/>
                <field name="han_ban_giao"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="ten_don_hang"/>
                                        </strong>
                                    </div>
                                    <span class="badge badge-primary">
                                        <field name="don_gia" widget="monetary"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <span><field name="ten_khach_hang"/></span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span>Tạo: <field name="ngay_tao_don"/></span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span t-if="record.han_ban_giao.raw_value" class="badge badge-secondary">
                                            Hạn: <field name="han_ban_giao"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_don_hang_search" model="ir.ui.view">
        <field name="name">Đơn hàng - Tìm kiếm</field>
        <field name="model">quan_ly_khach_hang.don_hang</field>
        <field name="arch" type="xml">
            <search>
                <field name="ten_don_hang"/>
                <field name="ten_khach_hang"/>
                <field name="ma_khach_hang"/>
                <separator/>
                <filter string="Mới" name="moi_cho_xu_ly" domain="[('trang_thai', '=', 'moi_cho_xu_ly')]"/>
                <filter string="Đã giao" name="da_giao" domain="[('trang_thai', '=', 'da_giao')]"/>
                <filter string="Đã hủy" name="da_huy" domain="[('trang_thai', '=', 'da_huy')]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Trạng thái" name="group_by_trang_thai" context="{'group_by': 'trang_thai'}"/>
                    <filter string="Khách hàng" name="group_by_khach_hang" context="{'group_by': 'khach_hang_id'}"/>
                    <filter string="Ngày tạo" name="group_by_ngay_tao" context="{'group_by': 'ngay_tao_don'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_don_hang" model="ir.actions.act_window">
        <field name="name">Quản lí đơn hàng</field>
        <field name="res_model">quan_ly_khach_hang.don_hang</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_don_hang_search"/>
    </record>

    <!-- Dashboard Action -->
    <record id="action_don_hang_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard đơn hàng</field>
        <field name="res_model">quan_ly_khach_hang.don_hang</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_don_hang_search"/>
        <field name="context">{'search_default_group_by_trang_thai': 1}</field>
    </record>
</odoo>

