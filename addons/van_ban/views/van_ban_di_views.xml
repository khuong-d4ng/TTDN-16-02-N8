<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_van_ban_di_form" model="ir.ui.view">
            <field name="name">van_ban_di</field>
            <field name="model">van_ban_di</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px">Văn bản đi</div>
                        <group col="2" string="Phân loại">
                            <field name="phan_loai" widget="radio"/>
                            <field name="khach_hang_id" attrs="{'invisible': [('phan_loai', '!=', 'khach_hang')], 'required': [('phan_loai', '=', 'khach_hang')]}"/>
                        </group>
                        <group col="4" string="Thông tin chung">
                            <field name="name"/>
                            <field name="trich_yeu"/>
                            <field name="ngay_van_ban"/>
                            <field name="ngay_gui"/>
                            <field name="so_di"/>
                            <field name="noi_nhan"/>
                            <field name="nguoi_ky"/>
                            <field name="loai_van_ban"/>
                            <field name="do_khan"/>
                            <field name="do_mat"/>
                            <field name="trang_thai"/>
                        </group>
                        <group string="File đính kèm">
                            <field name="file_dinh_kem" filename="file_name"/>
                            <field name="file_name" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_van_ban_di_tree" model="ir.ui.view">
            <field name="name">van_ban_di</field>
            <field name="model">van_ban_di</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="phan_loai"/>
                    <field name="khach_hang_id"/>
                    <field name="name"/>
                    <field name="trich_yeu"/>
                    <field name="ngay_van_ban"/>
                    <field name="ngay_gui"/>
                    <field name="so_di"/>
                    <field name="noi_nhan"/>
                    <field name="loai_van_ban"/>
                    <field name="do_khan"/>
                    <field name="trang_thai"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="van_ban_di_search">
            <field name="model">van_ban_di</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="trich_yeu"/>
                    <field name="noi_nhan"/>
                    <field name="nguoi_ky"/>
                    <field name="loai_van_ban"/>
                    <field name="trang_thai"/>
                    <separator/>
                    <filter string="Dự thảo" name="du_thao" domain="[('trang_thai', '=', 'du_thao')]"/>
                    <filter string="Chờ duyệt" name="cho_duyet" domain="[('trang_thai', '=', 'cho_duyet')]"/>
                    <filter string="Đã duyệt" name="da_duyet" domain="[('trang_thai', '=', 'da_duyet')]"/>
                    <filter string="Đã gửi" name="da_gui" domain="[('trang_thai', '=', 'da_gui')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Loại văn bản" name="group_by_loai" context="{'group_by': 'loai_van_ban'}"/>
                        <filter string="Trạng thái" name="group_by_trang_thai" context="{'group_by': 'trang_thai'}"/>
                        <filter string="Độ khẩn" name="group_by_do_khan" context="{'group_by': 'do_khan'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Kanban View for Dashboard -->
        <record id="view_van_ban_di_kanban" model="ir.ui.view">
            <field name="name">van_ban_di.kanban</field>
            <field name="model">van_ban_di</field>
            <field name="arch" type="xml">
                <kanban default_group_by="trang_thai" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="trich_yeu"/>
                    <field name="ngay_gui"/>
                    <field name="noi_nhan"/>
                    <field name="do_khan"/>
                    <field name="trang_thai"/>
                    <field name="phan_loai"/>
                    <field name="khach_hang_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                        <span t-if="record.do_khan.raw_value == 'khan'" class="badge badge-warning">Khẩn</span>
                                        <span t-if="record.do_khan.raw_value == 'hoa_toc'" class="badge badge-danger">Hỏa tốc</span>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <field name="trich_yeu"/>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <span><field name="ngay_gui"/></span>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <span t-if="record.phan_loai.raw_value == 'khach_hang'" class="badge badge-info">
                                                <field name="khach_hang_id"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_van_ban_di" model="ir.actions.act_window">
            <field name="name">Văn bản đi</field>
            <field name="res_model">van_ban_di</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="van_ban_di_search"/>
        </record>

        <!-- Dashboard Action -->
        <record id="action_van_ban_di_dashboard" model="ir.actions.act_window">
            <field name="name">Dashboard văn bản đi</field>
            <field name="res_model">van_ban_di</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="van_ban_di_search"/>
            <field name="context">{'search_default_group_by_trang_thai': 1}</field>
        </record>
    </data>
</odoo>